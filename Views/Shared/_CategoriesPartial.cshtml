@model List<ProductModel>

<!-- Categories Section Begin -->
<section class="categories">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-5 p-2">
                <div class="categories__item categories__large__item set-bg"
                     data-setbg="http://localhost:5000/Images/products/@Model[0].ImageUrl">
                    <div class="categories__text">
                        <h1> @Model[0].Name</h1>
                        <p>Populer Urun</p>
                        <a asp-controller="User" asp-action="Index">SATIN AL</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="row">
                    @for (int i = 1; i < 5; i++)
                    {
                        <div class="col-lg-6 col-md-6 col-sm-5 p-2">
                            <div class="product__item__pic set-bg" data-setbg="http://localhost:5000/images/products/@Model[i].ImageUrl">
                                <div class="categories__item set-bg" href="http://localhost:5000/images/products/@Model[i].ImageUrl">
                                    <div class="categories__text">
                                        <h4>@Model[i].Name</h4>
                                        <p> @Model[i].Description </p>
                                        <a asp-controller="User" asp-action="Index">Satin al</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>
<!-- Categories Section End -->